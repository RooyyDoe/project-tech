{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
		"semi": ["error", "always"],
        "curly": "error",
        "comma-dangle": [1, "always-multiline"],
        "no-empty": 1,
        "quotes": ["error", "single", "avoid-escape"]
    }
}